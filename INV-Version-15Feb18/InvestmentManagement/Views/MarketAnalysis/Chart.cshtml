
<script src="~/Scripts/MarketAnalysisChart.js"></script>
<div id="replace">

    <div class="contentTop">
        <span class="pageTitle">
            <span class=" glyphicon glyphicon-yen"></span>
            @Session["currentPage"]
        </span>

    </div>
    <ol class="breadcrumb">
        @Html.Raw(@ViewBag.BreadCum)
    </ol>
    <div class="wrapper pl">
       @*<img class="loadingImage" src="~/Images/loading.gif" style="display: none;" />*@
        <div class="alert alert-success mt20">
            <button class="close" data-dismiss="alert" type="button">×</button>

            <strong>Info !</strong>
            @* @ViewBag.Message*@
        </div>
        <div class="container-fluid Grid-Container">

            <!--Uploader Part -->
            <div class="widget mb20">
                <div class="whead">
                    <h6>Market Analysis</h6>
                    @*<select id="ddlPageSize">
                                
                                <option selected="selected">15</option>
                                <option>50</option>
                                <option>100</option>
                            </select>
                    <h6 style="float:right">Select Row Count</h6>*@
                    <div class="clear"></div>
                </div>

                <div class="formRow dgHeaderBk">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                <h5 style="font-weight: 700;">Select an Instrument</h5>
                            </div>
                            <div class="col-md-2">
                                @Html.DropDownList("instrumentName", (SelectList)ViewBag.instrumentList, "Select an Instrument", new { @class = "control-label entrylable sResize" })
                            </div>
                            <div class="col-md-1">
                                <h5 style="font-weight: 700;">From</h5>
                            </div>
                            <div class="col-md-2">
                                <input type="text" id="fromDate" name="fromDate" class="form-control dWidth">
                            </div>
                            <div class="col-md-1">
                                <h5 style="font-weight: 700;">To</h5>
                            </div>
                            <div class="col-md-2">
                                <input type="text" id="toDate" name="toDate" class="form-control dWidth ">
                            </div>
                            <div class="col-md-1">
                                <input type="button" id="btn-Chart" class="btn btn-primary  " value="Apply" />
                            </div>
                        </div>
                    </div>
                </div>
                @* navigation*@
                <div class="settingsChart">
                    <ul class="nav nav-pills ">
                        <li role="presentation"  class="active"><a data-toggle="pill" href="#MarketPrice">Market Price</a></li>
                        <li role="presentation" id="iTransactionValue"><a data-toggle="pill" href="#TransactionValue">Transaction Value</a></li>
                        <li role="presentation" id="iVariation"><a data-toggle="pill" href="#Variation">Variation</a></li>
                        <li role="presentation" id="iValue"><a data-toggle="pill" href="#Value">Value</a></li>
                    </ul>
                </div>
                @*Chart Section*@
                <div class="wrapper pl">

                    <img class="loadingImage" src="~/Images/loading.gif" style="display: none;" />
                    <div class="contents tab-pane settingstabContents" style=" height: auto" id="MarketPrice">
                        
                    </div>

                    <div class="contents tab-pane settingstabContents" style=" height: auto" id="TransactionValue">
                        
                    </div>


                    <div class="contents tab-pane settingstabContents" style=" height:auto" id="Variation">
                        
                    </div>


                    <div class="contents tab-pane settingstabContents" style=" height: auto" id="Value">
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">



    $(document).ready(function () {
        $(function () {

            $("#fromDate").datepicker({ dateFormat: formatDate('long') });
            $('#fromDate').datepicker('setDate', new Date());
            $("#toDate").datepicker({ dateFormat: formatDate('long') });
            $('#toDate').datepicker('setDate', new Date());
        });

        $("#MarketPrice").show();
        $("#TransactionValue").hide();
        $("#Variation").hide();
        $("#Value").hide();



        $('.settingsChart li a').click(function (e) {
            //e.preventDefault()
            //$(this).pill('show');
            tabId = $(this).attr("href");
            //alert(tabId);
            if (tabId == "#MarketPrice") {
                $("#TransactionValue").hide();
                $("#Variation").hide();
                $("#Value").hide();
                $("#MarketPrice").show();


            }

            else if (tabId == "#TransactionValue") {
                $("#MarketPrice").hide();
                $("#Variation").hide();
                $("#Value").hide();
                $("#TransactionValue").show();

            }

            else if (tabId == "#Variation") {
                $("#MarketPrice").hide();
                $("#TransactionValue").hide();
                $("#Value").hide();
                $("#Variation").show();

            }
            else if (tabId == "#Value") {
                $("#MarketPrice").hide();
                $("#TransactionValue").hide();
                $("#Variation").hide();
                $("#Value").show();

            }

        });       

    });



</script>
