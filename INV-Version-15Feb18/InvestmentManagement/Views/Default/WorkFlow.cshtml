

<div id="replace">

    <div class="contentTop">
        <span class="pageTitle">
            <span class=" glyphicon glyphicon-yen"></span>
            @Session["currentPage"]
        </span>

    </div>
    <ol class="breadcrumb">
        @Html.Raw(@ViewBag.BreadCum)
    </ol>
    <div class="wrapper pl">
       @*<img class="loadingImage" src="~/Images/loading.gif" style="display: none;" />*@
        <div class="alert alert-success mt20">
            <button class="close" data-dismiss="alert" type="button">×</button>

            <strong>Workflow !</strong>
            @* @ViewBag.Message*@
        </div>
        <div class="container-fluid Grid-Container">
            <!--Uploader Part -->           
               
                @* navigation*@
                <div class="settingsChart">
                    <ul class="nav nav-pills ">
                        <li role="presentation"  class="active"><a data-toggle="pill" href="#MarketPrice">New FDR</a></li>
                        <li role="presentation" id="iTransactionValue"><a data-toggle="pill" href="#TransactionValue">Encash FDR</a></li>                        
                    </ul>
                </div>
                @*Chart Section*@
                <div class="wrapper pl">

                    <img class="loadingImage" src="~/Images/loading.gif" style="display: none;" />
                    <div class="contents tab-pane settingstabContents" style=" height: auto" id="MarketPrice">
                        <img  src="~/Images/WF-New-FDR.png"  />
                    </div>

                    <div class="contents tab-pane settingstabContents" style=" height: auto" id="TransactionValue">
                        <img  src="~/Images/WF-Encash-FDR.png"  />
                    </div>    
                   

                </div>
            
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $(function () {

            $("#fromDate").datepicker({ dateFormat: formatDate('long') });
            $('#fromDate').datepicker('setDate', new Date());
            $("#toDate").datepicker({ dateFormat: formatDate('long') });
            $('#toDate').datepicker('setDate', new Date());
        });

        $("#MarketPrice").show();
        $("#TransactionValue").hide();
        $("#Variation").hide();
        $("#Value").hide();



        $('.settingsChart li a').click(function (e) {
            //e.preventDefault()
            //$(this).pill('show');
            tabId = $(this).attr("href");
            //alert(tabId);
            if (tabId == "#MarketPrice") {
                $("#TransactionValue").hide();
                $("#Variation").hide();
                $("#Value").hide();
                $("#MarketPrice").show();


            }

            else if (tabId == "#TransactionValue") {
                $("#MarketPrice").hide();
                $("#Variation").hide();
                $("#Value").hide();
                $("#TransactionValue").show();

            }

            else if (tabId == "#Variation") {
                $("#MarketPrice").hide();
                $("#TransactionValue").hide();
                $("#Value").hide();
                $("#Variation").show();

            }
            else if (tabId == "#Value") {
                $("#MarketPrice").hide();
                $("#TransactionValue").hide();
                $("#Variation").hide();
                $("#Value").show();

            }


        });







    });
</script>