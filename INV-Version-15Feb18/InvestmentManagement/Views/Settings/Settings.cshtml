<script type="text/javascript">
    $(document).ready(function () {
        $("#Business").show();
        $("#Application").hide();
        $("#Financial").hide();
      

    });


    $('.settingsPills li a').click(function (e) {
        //e.preventDefault()
        //$(this).pill('show');
        tabId = $(this).attr("href");
        //alert(tabId);
        if (tabId == "#Financial")
        {
            $("#Application").hide();
            $("#Business").hide();
            $("#Financial").show();
         

        }

        else if (tabId == "#Application")
        {
            $("#Business").hide();
            $("#Financial").hide();
            $("#Application").show();
       
        }

        else if (tabId == "#Business")
        {
            $("#Application").hide();
            $("#Financial").hide();
            $("#Business").show();

        }

          
    })
</script>

