<script>

    $(function () {

        $("#startDate").datepicker({ dateFormat: formatDate('long') });
        $('#startDate').datepicker('setDate', new Date());
        $("#endDate").datepicker({ dateFormat: formatDate('long') });
        $('#endDate').datepicker('setDate', new Date());
    });

    (function () {

        $(".numericOnly").bind('keypress', function (e) {
            if (e.keyCode == '9' || e.keyCode == '16') {
                return;
            }
            var code;
            if (e.keyCode) code = e.keyCode;
            else if (e.which) code = e.which;
            if (e.which == 46)
                return false;
            if (code == 8 || code == 46)
                return true;
            if (code < 48 || code > 57)
                return false;
        });

        //Disable paste
        $(".numericOnly").bind("paste", function (e) {
            e.preventDefault();
        });

        $(".numericOnly").bind('mouseenter', function (e) {
            var val = $(this).val();
            if (val != '0') {
                val = val.replace(/[^0-9]+/g, "")
                $(this).val(val);
            }
        });
    });
    //chart One
    (function () {
        google.load('visualization', '1', { packages: ['corechart', 'bar'] });
        google.setOnLoadCallback(drawTrendlines);

        function drawTrendlines() {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Month');
            data.addColumn('number', 'Target');
            data.addColumn('number', 'Actual');

            data.addRows([
              ['Jan', 1, .25],
              ['Feb', 2, .5],
              ['Mar', 3, 1],
              ['Apr', 4, 2.25],
              ['May', 5, 2.25],
              ['Jun', 6, 3],
              ['Jul', 7, 4],
              ['Aug', 8, 5.25],
              ['Sep', 9, 7.5],
              ['Oct', 8, 9],
              ['Nov', 6, 8],
              ['Dec', 7, 10],
            ]);

            var options = {
                title: 'FDR Investment - Target vs Actual',
                trendlines: {
                    0: { type: 'linear', lineWidth: 5, opacity: .3 },
                    1: { type: 'exponential', lineWidth: 10, opacity: .3 }
                },
                hAxis: {

                    //format: 'h:mm a',
                    viewWindow: {
                        min: [7, 30, 0],
                        max: [17, 30, 0]
                    }
                },
                vAxis: {
                    title: 'Rating (scale of 1-10)'
                }
            };

            var chart = new google.visualization.ColumnChart(document.getElementById('chartOne'));
            chart.draw(data, options);
        }
    })();
