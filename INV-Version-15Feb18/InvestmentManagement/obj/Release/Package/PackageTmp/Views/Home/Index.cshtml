              ['2014', 1000, 400, 200],
              ['2015', 1170, 460, 250],
              ['2016', 660, 1120, 300]
              //['2017', 1030, 540, 350]
            ]);

            var options = {
                chart: {
                    title: 'SectorWise Investment',

                },
                bars: 'vertical',
                vAxis: { format: 'short' },
                height: 400,
                colors: ['#1b9e77', '#d95f02', '#7570b3']
            };

            var chart = new google.charts.Bar(document.getElementById('chartThree'));

            chart.draw(data, google.charts.Bar.convertOptions(options));




